<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tarPink</item>>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Login" parent="Theme.Design.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyAccount" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/tarPink</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">#99FFFFFF</item>
        <item name="android:textColorHint">#99FFFFFF</item>
        <item name="colorControlNormal">#99FFFFFF</item>
        <item name="colorControlActivated">#99FFFFFF</item>
        <item name="colorControlHighlight">#99FFFFFF</item>
    </style>

    <style name="ForgetPasswordEditTextTheme">
        <item name="colorAccent">#2162a5</item>
        <item name="colorControlNormal">#2162a5</item>
        <item name="colorControlActivated">#2162a5</item>
        <item name="colorControlHighlight">#2162a5</item>
    </style>

</resources>
