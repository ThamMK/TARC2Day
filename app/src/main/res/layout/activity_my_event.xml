<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rsf2.android.tarc2day.MyEvent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Currently you do not\n have any registered event"
        android:id="@+id/textShowNoRegisterEvent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listViewMyEvent" />

</RelativeLayout>
